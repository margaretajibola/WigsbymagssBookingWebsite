// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model Service {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  category    String   // e.g. "  Installations", "Sewins", "Others"
  extraNotes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Review {
  id          Int      @id @default(autoincrement())
  text        String
  image       String?
  createdAt   DateTime  @default(now())
}
